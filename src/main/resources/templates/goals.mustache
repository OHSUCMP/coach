{{>layout/header}}

<script type="text/javascript">
    $(document).ready(function () {
        $('#systolic, #diastolic').inputmask({
            regex: "[0-9]+"
        });
    });
</script>

<div id="randomizationGroup" class="hidden">{{randomizationGroup}}</div>

<div class="container">
    <div class="px-2 fs-4">
        <i class="fas fa-user color-primary"></i>&nbsp;<strong>{{patient.name}}</strong> - {{patient.age}} years {{patient.gender}}
    </div>

    {{#bpGoal}}
    <div class="mt-3">
        <h4 class="p-2 bgd-secondary">
            <i class="fas fa-bullseye color-primary"></i> My Blood Pressure Goal
        </h4>
    </div>
    <div id="bpContent">
        <div class="bpGoal" data-systolic="{{systolicTarget}}" data-diastolic="{{diastolicTarget}}">
            <p><em>Update your BP goal only if you've discussed a different goal with your care team.</em></p>
            <span class="me-2">My current Blood Pressure goal is:</span>
            <span class="d-inline-block me-3">
                <input id='systolic' type='text' placeholder='Systolic' data-min="120" data-max="150" value="{{systolicTarget}}" />
                /
                <input id='diastolic' type='text' placeholder='Diastolic' data-min="80" data-max="90" value="{{diastolicTarget}}" />
            </span>
            <button id="updateBPGoal" class="me-3 btn btn-sm button-primary" disabled>Update</button>
            <span id="updateNote" class="d-inline-block"></span>
        </div>
    </div>
    {{/bpGoal}}

    {{#isEnhancedView}}
        <div class="mt-3">
            <h4 class="p-2 bgd-secondary">
                <i class="fas fa-trophy color-primary"></i> My Other Goals
            </h4>
        </div>
        {{#hasOtherGoals}}
            <!-- blue boxes on the left, histories on the right -->
            <div class="container">
                <div id="otherGoalsContainer" class="row">
                </div>
            </div>
        {{/hasOtherGoals}}
        {{^hasOtherGoals}}
            <div id="noOtherGoals">
                You have no other goals defined at this time.
            </div>
        {{/hasOtherGoals}}
    {{/isEnhancedView}}

</div>

{{>layout/footer}}